{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/index.ts", "src/runtime.ts", "src/crypto.ts", "src/errors.ts", "src/types.ts", "src/base64.ts", "src/env.ts"],
  "exclude": ["src/cli"]
}
